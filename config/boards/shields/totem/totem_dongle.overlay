/ {
    kscan_0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";
        
        // Mapeamento para nice!nano v2
        col-gpios = <&gpio0 2 GPIO_ACTIVE_HIGH>,  // P0.02
                   <&gpio0 3 GPIO_ACTIVE_HIGH>;  // P0.03
        row-gpios = <&gpio0 4 GPIO_ACTIVE_HIGH>;  // P0.04
    };
};
